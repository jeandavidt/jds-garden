@article{Du2017,
  title = {Estimating Heroin Abuse in Major {{Chinese}} Cities through Wastewater-Based Epidemiology},
  author = {Du, Peng and Zhou, Zilei and Bai, Ya and Xu, Zeqiong and Gao, Tingting and Fu, Xiaofang and Li, Xiqing},
