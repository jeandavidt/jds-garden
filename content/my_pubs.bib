  langid = {english},
  keywords = {amino-acid,chloramination,chlorine,chloropicrin,drinking-water,environmental science & ecology,halonitromethane,hydroxyl,oxidation,ozone,precursor,radical,removal,trihalomethane formation,waste-water},
