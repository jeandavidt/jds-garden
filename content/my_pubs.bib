@article{Lai2023,
  title = {A Time Series Based Machine Learning Strategy for Wastewater-Based Forecasting and Nowcasting of {{COVID-19}} Dynamics},
  author = {Lai, Mallory and Cao, Yongtao and Wulff, Shaun S. and Robinson, Timothy J. and McGuire, Alexys and Bisha, Bledar},
  date = {2023-11-01},
  journaltitle = {SCIENCE OF THE TOTAL ENVIRONMENT},
  shortjournal = {Sci. Total Environ.},
  volume = {897},
