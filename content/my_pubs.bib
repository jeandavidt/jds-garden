@article{Gao2017,
  title = {Evaluation of In-Sewer Transformation of Selected Illicit Drugs and Pharmaceutical Biomarkers},
  author = {Gao, Jianfa and Banks, Andrew and Li, Jiaying and Jiang, Guangming and Lai, Foon Yin and Mueller, Jochen F. and Thai, Phong K.},
