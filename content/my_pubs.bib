  author = {Bonanno Ferraro, G. and Veneri, C. and Mancini, P. and Iaconelli, M. and Suffredini, E. and Bonadonna, L. and Lucentini, L. and Bowo-Ngandji, A. and Kengne-Nde, C. and Mbaga, D. S. and Mahamat, G. and Tazokong, H. R. and Ebogo-Belobo, J. T. and Njouom, R. and Kenmoe, S. and La Rosa, G.},
  date = {2021-11-02},
