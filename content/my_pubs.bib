@article{DAoust2021a,
  title = {Catching a Resurgence: {{Increase}} in {{SARS-CoV-2}} Viral {{RNA}} Identified in Wastewater 48~h before {{COVID-19}} Clinical Tests and 96~h before Hospitalizations},
  author = {D'Aoust, P M and Graber, T E and Mercier, E and Montpetit, D and Alexandrov, I and Neault, N and Baig, A T and Mayne, J and Zhang, X and Alain, T and Servos, M R and Srikanthan, N and MacKenzie, M and Figeys, D and Manuel, D and Jüni, P and MacKenzie, A E and Delatolla, R},
