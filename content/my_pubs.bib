  author = {Davis, J J and Long, S. W and Christensen, P A and Olsen, R J and Olson, R and Shukla, M and Subedi, S and Stevens, R and Musser, J M},
  date = {2021},
  journaltitle = {Microbiology Spectrum},
  volume = {9},
