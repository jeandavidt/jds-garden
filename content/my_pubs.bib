  file = {/Users/jeandavidt/Zotero/storage/GAU3GFTH/full-text.pdf}
}

@article{Garson2022,
  title = {Highly Sensitive and Specific Detection of the {{SARS-CoV-2 Delta}} Variant by Double-Mismatch Allele-Specific Real Time Reverse Transcription {{PCR}}},
