@article{McCall2016,
  title = {Critical Review on the Stability of Illicit Drugs in Sewers and Wastewater Samples},
  author = {McCall, A K and Bade, R and Kinyua, J and Lai, F Y and Thai, P K and Covaci, Adrian and Bijlsma, Lubertus and {vanNuijs}, Alexander L.N. and Ort, Christoph},
  date = {2016},
  journaltitle = {Water Research},
  volume = {88},
